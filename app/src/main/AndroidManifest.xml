<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.piclabs.photoshoptroll">

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_troll"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_troll_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.PhotoshopTrollSplashScreenActivity" android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.PhotoshopTrollActivity"/>
        <activity android:name=".activities.PhotoshopTrollAboutActivity"/>
    </application>
</manifest>